@model Order

@{
    ViewData["Title"] = "Create";
}

<h4>Order</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CustomerFullName" class="control-label"></label>
                <input asp-for="CustomerFullName" class="form-control" autocomplete="off" />
                <span asp-validation-for="CustomerFullName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Warehouse" class="control-label"></label>
                <select asp-for="WarehouseId" class="form-control" asp-items="ViewBag.WarehouseId"></select>
            </div>
            <input type="hidden" value="@ViewBag.Cars" name="orderedCars" />
            <div class="form-group">
                <input type="submit" value="Buy" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @if (ViewBag.returnUrl != null)
    {
        <a asp-action="Index" asp-controller="Cart" asp-route-returnUrl="@ViewBag.returnUrl">Back to Cart</a>
    }
    else
    {
        <a asp-action="Index">Back to List</a>
    }

</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
