@model RegisterViewModel

<h2>Register new user</h2>

<div class="row">
    <div class="col-md-4">
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div>
                <label asp-for="Email" class="control-label"></label><br />
                <input asp-for="Email" class="form-control" autocomplete="off" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="Password" class="control-label"></label><br />
                <input asp-for="Password" class="form-control" autocomplete="off" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div>
                <label asp-for="PasswordConfirm" class="control-label"></label><br />
                <input asp-for="PasswordConfirm" class="form-control" autocomplete="off" />
                <span asp-validation-for="PasswordConfirm" class="text-danger"></span>
            </div>
            <div>
                <input type="submit" value="Register" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
@if (ViewBag.SuccedMessage != null)
{
    <div class="alert alert-success" style="margin-top: 10px">
        <strong>Success!</strong> @ViewBag.SuccedMessage
    </div>
    <a asp-action="Index" asp-controller="Cars" >Back to main</a>
}
